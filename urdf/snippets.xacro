<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- TRANSMISSION MACRO -->
  <xacro:macro name="transmission_macro" params="joint reduction:=1">
    <transmission name="${joint}_transmission" type="SimpleTransmission">
      <type>transmission_interface/SimpleTransmission</type>
      <actuator name="${joint}_actuator">
        <mechanicalReduction>${reduction}</mechanicalReduction>
      </actuator>
      <joint name="${joint}">
        <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
        <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      </joint>
    </transmission>
  </xacro:macro>


  <!-- WHEEL MACRO -->
  <xacro:macro name="wheel_macro" params="prefix position">
    <link name="${prefix}_wheel_link">
      <visual>
        <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_thickness}"/>
        </geometry>
        <material name="black">
          <color rgba="0 0 0 1"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_thickness}"/>
        </geometry>
      </collision>
    </link>

    <joint name="${prefix}_wheel_joint" type="continuous">
      <parent link="base_link"/>
      <child link="${prefix}_wheel_link"/>
      <origin xyz="0 ${position} 0" rpy="${-pi/2} 0 0"/>
      <axis xyz="0 0 1"/>
    </joint>

    <xacro:transmission_macro joint="${prefix}_wheel_joint" reduction="${wheel_reduction}"/>

  </xacro:macro>

</robot>